<%- include('../partials/header') %>

<div>Please make sure the ingredient is not already in the following list:</div>
<section id="badge-container">
  <% ingredients.forEach(function(i) { %>
    <article class="badge"><%= i.nameAndMeasurement %></article>
  <% }) %>
</section>

<form id="add-ingredient-form" action="/ingredients" method="POST">
  <label>Name & measurment:</label>
  <input type="text" name="nameAndMeasurement">
  <input type="submit" value="Add Ingredient">
</form>

<%- include('../partials/footer') %>
